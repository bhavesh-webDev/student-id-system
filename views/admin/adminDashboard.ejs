<div class="container-d">
  <h1>📋 Pending Student Requests</h1>

  <% if (pendingUser.length === 0) { %>
  <div class="empty">
    <p>No pending requests 🎉</p>
  </div>
  <% } else { %>
  <div class="requests">
    <% pendingUser.forEach((user) => { %>
    <div class="card">
      <div class="card-header">
        <h2><%= user.name %> <%= user.surname %></h2>
        <span class="status <%= user.status %>"><%= user.status %></span>
      </div>
      <div class="card-body">
        <p><strong>Email:</strong> <%= user.email %></p>
        <p><strong>Course:</strong> <%= user.course %></p>
        <p><strong>Semester:</strong> <%= user.semester %></p>
      </div>
      <div class="card-actions">
        <!-- View full details -->
        <form action="/admin/getuser/<%= user._id %>" method="GET">
          <button class="btn border rounded" id="view-btn" type="submit">
            👀 View Details
          </button>
        </form>
        <!-- Approve -->
        <form action="/admin/statusapproved/<%= user._id %>" method="POST">
          <button class="btn border rounded" id="approve-btn" type="submit">
            ✅ Approve
          </button>
        </form>
        <!-- Reject -->
        <form action="/admin/statusrejected/<%= user._id %>" method="POST">
          <button class="btn border rounded" id="reject-btn" type="submit">
            ❌ Reject
          </button>
        </form>
      </div>
    </div>
    <% }) %>
    <form action="/admin/getAllPendingUsers" method="GET">
      <button class="btn-submit" type="submit">
        Get All Pending User Requests
      </button>
    </form>
  </div>
  <% } %>
  <div class="container-d">
    <h2 class="title">All Registered Students</h2>
    <div class="users-table">
      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Status</th>
          </tr>
        </thead>
        <tbody>
          <% allUsers.forEach(user => { %>
          <tr>
            <td><%= user.name %></td>
            <td>
              <span class="status <%= user.status.toLowerCase() %>">
                <%= user.status %>
              </span>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
    <form action="/admin/getAllApprovedUsers" method="GET">
      <br />
      <button class="btn-submit" type="submit">
        get All Approved User Requests
      </button>
    </form>
  </div>
</div>
