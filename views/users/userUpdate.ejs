<form action="/user/updateprofile/<%= user._id %>?_method=PATCH" method="POST">
  <div class="mb-3">
    <label for="exampleInputEmail1" class="form-label"
      >Enter Email to Update Email</label
    >
    <input
      type="email"
      name="email"
      class="form-control"
      id="email"
      aria-describedby="emailHelp"
    />
    <div id="emailHelp" class="form-text">
      We'll never share your email with anyone else.
    </div>
  </div>
  <div class="mb-3">
    <label for="exampleInputPassword1" class="form-label"
      >Enter Old Password to Update newPassword</label
    >
    <input type="password" name="password" class="form-control" id="password" />
  </div>
  <div class="mb-3">
    <label for="exampleInputPassword2" class="form-label"
      >Enter New Password
    </label>
    <input
      type="password"
      name="newpassword"
      class="form-control"
      id="password"
    />
  </div>
  <div class="mb-3">
    <input type="checkbox" class="form-check-input" id="viewPassword" />
    <label class="form-check-label" for="password">show password</label>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
