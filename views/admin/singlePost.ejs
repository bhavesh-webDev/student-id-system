<div class="container">
  <div class="user-card">
    <div class="user-header">
      <img
        src="<%= user.profilepic %>"
        alt="Profile Picture"
        class="profile-pic"
      />
      <div class="user-info">
        <h2><%= user.name %> <%= user.surname %></h2>
        <p><strong>Email:</strong> <%= user.email %></p>
        <p><strong>Course:</strong> <%= user.course %></p>
        <p><strong>Semester:</strong> <%= user.semester %></p>
        <p><strong>Roll No:</strong> <%= user.rollno %></p>
        <p>
          <strong>Status:</strong>
          <span class="status <%= user.status %>"><%= user.status %></span>
        </p>
      </div>
    </div>

    <div class="user-actions">
      <% if (user.status!=="approved") { %>
      <form
        action="/admin/statusapproved/<%= user._id %>?method=PATCH"
        method="POST"
      >
        <button class="btn approve-btn" type="submit">✅ Approve</button>
      </form>
      <% }else{ %>
      <form
        action="/admin/statusrejected/<%= user._id %>?method=PATCH"
        method="POST"
      >
        <button class="btn reject-btn" type="submit">❌ Reject</button>
      </form>
      <%}%>
    </div>
  </div>
</div>
